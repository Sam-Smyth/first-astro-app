---
import { Picture } from 'astro:assets';
import logo from "../images/logo.png";
---

<header>
  <div class="logo">
    <Picture src={logo} formats={['avif', 'webp']} alt="Site logo" />
  </div>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    background-color: #f2f2f2;
  }

  .logo img {
    height: 40px;
    width: auto;
  }

  nav ul {
    list-style: none;
    display: flex;
  }

  nav ul li {
    margin-left: 1rem;
  }

  nav ul li:first-child {
    margin-left: 0;
  }

  nav ul li a {
    text-decoration: none;
    color: #333;
  }
</style>
